{{#> inputs/base value=value}}
  {{#if label}}
  <legend>
    <label for="{{id}}" class="collapse c-1">{{camelToSentence label}}</label>
  </legend>
  {{/if}}
  <input id="{{id}}" type="url" name="{{label}}" value="{{value}}" {{#if required}}required{{/if}}>
{{/inputs/base}}


{{#comment}}
<style class="scss" media="screen" lang="scss">
  legend {
    transform: translate(.1rem, 100%);
    transition: transform .25s ease-in-out;
    -webkit-padding-start: 0;
    -webkit-padding-end: 0;
    height: 1rem;
    line-height: 1rem;
    pointer-events: none;
  }

  .has-content,
  .has-focus {
    > legend {
      transform: translate(.1rem, 0);
      height: 1rem;
      pointer-events: all;
    }
  }

  input[type="text"],
  input[type="url"],
  input[type="password"],
  input[type="date"] {
    display: block;
    font-size: 1rem;
    margin-top: 0 !important;
    outline: none;
    padding: .25rem .1rem;
    width: 100%;
  }

  textarea {
    display: block;
    font-size: 1rem;
    min-height: 5rem;
    width: 100%;
  }
</style>
{{/comment}}
